{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Entra.VerifiedID.Client": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",
  "AppSettings": {
    "CacheExpiresInSeconds": 300
  },

  "AzureAd": {
    "TenantName": "<...yourname....onmicrosoft.com>",
    "TenantId": "<...guid...>",
    "Authority": "<https://...yourname....ciamlogin.com/>",
    "ClientId": "<your-clientid-of-your-ciam-app>",
    "ClientSecret": "<clientsecret-of-the-above-app>",
    "ClientCredentials": [
      {
        "SourceType": "ClientSecret",
        "ClientSecret": "<clientsecret-of-the-above-app>"
      }
    ],
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc"
  },

  /* 
   * if you have onboarded via ZeroConfig/Quick setup, you only need details for Verified ID
   * this config example also shows that you don't need to specify all settings, like 'includeQRCode' etc,
   * if you are happy to go with the default values.
   * Remove the '-quick' or '-template' part before running
  */
  "VerifiedID": {
    "client_name": "Northwind Airlines",
    "Purpose": "To prove your membership",
    "DidAuthority": "<did:web:...your-name>",
    "CredentialType": "NorthwindAirlinesDigitalCard",
    "CredentialManifest": "https://verifiedid.did.msidentity.com/v1.0/tenants/...your-manifest-URL"
  },

  /* If Verified ID is onboarded to another than the CIAM tenant, then you need more details */
  "VerifiedID-advanced": {
    "ApiEndpoint": "https://verifiedid.did.msidentity.com/v1.0/verifiableCredentials/",
    "TenantId": "<your-tenant-id>",
    "Authority": "https://login.microsoftonline.com/",
    "scope": "3db474b9-6a0c-4840-96ac-1fceb342124f/.default",
    "ClientId": "<your-clientid-that-have-VerifiedID-permissions>",
    "ClientSecret": "<your-clientsecret-of-the-above>>",
    "client_name": "Northwind Airlines",
    "Purpose": "To prove your membership",
    "DidAuthority": "<did:web:...your-name>",
    "includeQRCode": false,
    "includeReceipt": true,
    "allowRevoked": false,
    "validateLinkedDomain": true,
    "CredentialType": "NorthwindAirlinesDigitalCard",
    "CredentialManifest": "https://verifiedid.did.msidentity.com/v1.0/tenants/...your-manifest-URL",
    "IssuancePinCodeLength": 0,
    "useFaceCheck": false,
    "sourcePhotoClaimName": "photo",
    "matchConfidenceThreshold": 70
  }

}
